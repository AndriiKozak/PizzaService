<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="pizzaRepository" class="com.someone.pizzaservice.repository.pizza.InMemPizzaRepository"
    init-method="cookPizzas">
       
    </bean>

    <bean name="orderRepository" class="com.someone.pizzaservice.repository.order.InMemOrderRepository">
       
    </bean>
    <bean name="orderService" class="com.someone.pizzaservice.service.order.SimpleOrderService">
        <constructor-arg ref="pizzaRepository"/>
        <constructor-arg ref="orderRepository"/>
    </bean>    
    <bean name="noCard" class="com.someone.pizzaservice.domain.discountcard.NoCard"
    factory-method="getInstance"/>
    <!-- more bean definitions go here -->

</beans>